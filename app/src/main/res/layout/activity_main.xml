<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:padding="16dp">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:scaleType="fitCenter"
        android:background="#DDDDDD" />

    <!-- Nhóm nút Filter -->
    <RadioGroup
        android:id="@+id/filterGroup"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="12dp">

        <RadioButton
            android:id="@+id/filterSketch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sketch" />

        <RadioButton
            android:id="@+id/filterEmboss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Emboss" />

        <RadioButton
            android:id="@+id/filterPixelate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pixelate" />
        <RadioButton
            android:id="@+id/filterOilPaint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Oil Paint" />

    </RadioGroup>

    <LinearLayout
        android:id="@+id/pixelateControls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:padding="8dp">

        <!-- Chọn kích thước khối -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chọn kích thước khối:"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/blockSizeGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/blockSize5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5" />

            <RadioButton
                android:id="@+id/blockSize10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10" />

            <RadioButton
                android:id="@+id/blockSize15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15" />

            <RadioButton
                android:id="@+id/blockSize20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20" />

            <RadioButton
                android:id="@+id/blockSize25"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="25" />
        </RadioGroup>

        <!-- Chọn hình dạng -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Chọn hình dạng:"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/blockShapeGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/shapeSquare"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hình vuông" />

            <RadioButton
                android:id="@+id/shapeTriangle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hình tam giác" />

            <RadioButton
                android:id="@+id/shapeHexagon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hình lục giác" />
        </RadioGroup>
    </LinearLayout>

    <!-- Oil Paint Controls -->
    <LinearLayout
        android:id="@+id/oilPaintControls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:padding="8dp">

        <!-- Radius Control -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chọn bán kính:"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/radiusGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radius3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3" />

            <RadioButton
                android:id="@+id/radius5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5" />

            <RadioButton
                android:id="@+id/radius7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7" />

            <RadioButton
                android:id="@+id/radius10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10" />
        </RadioGroup>

        <!-- Intensity Levels Control -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Chọn mức độ phân chia cường độ:"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/intensityLevelsGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/intensity10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10" />

            <RadioButton
                android:id="@+id/intensity20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20" />

            <RadioButton
                android:id="@+id/intensity30"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="30" />

            <RadioButton
                android:id="@+id/intensity40"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="40" />
        </RadioGroup>
    </LinearLayout>

    <!-- Button Container for Pick Image and Save Image buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="12dp">

        <ImageButton
            android:id="@+id/btnPickImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_menu_gallery"
            android:background="@android:color/transparent"
            android:layout_marginEnd="24dp" />

        <ImageButton
            android:id="@+id/btnSaveImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_menu_save"
            android:background="@android:color/transparent" />
    </LinearLayout>

    <!-- Save Options Container (Initially hidden) -->
    <LinearLayout
        android:id="@+id/saveOptionsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_marginTop="12dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save Options:"
            android:textStyle="bold"
            android:gravity="center" />

        <Button
            android:id="@+id/btnSaveAsNew"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save as new image"
            android:layout_marginTop="8dp" />

        <Button
            android:id="@+id/btnSaveReplacement"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Replace original image"
            android:layout_marginTop="8dp" />
    </LinearLayout>
</LinearLayout>